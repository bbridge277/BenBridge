  <script>
    // ============================
    // INTERACTIVITY & ANIMATIONS
    // ============================

    // Mobile menu
    const burger = document.getElementById('burger');
    const navLinks = document.getElementById('navLinks');
    burger?.addEventListener('click', () => {
      const open = burger.getAttribute('aria-expanded') === 'true';
      burger.setAttribute('aria-expanded', String(!open));
      if (!open) {
        navLinks.style.display = 'grid';
        navLinks.style.gridTemplateColumns = '1fr';
        navLinks.style.gap = '.4rem';
        navLinks.style.padding = '.6rem';
        navLinks.style.background = getComputedStyle(document.documentElement).getPropertyValue('--surface');
        navLinks.style.border = '1px solid var(--ring)';
        navLinks.style.borderRadius = '16px';
        navLinks.style.position = 'absolute';
        navLinks.style.top = '60px';
        navLinks.style.right = '12px';
        navLinks.style.boxShadow = 'var(--shadow)';
      } else {
        navLinks.removeAttribute('style');
      }
    });

    // Color mode toggle
    const modeToggle = document.getElementById('modeToggle');
    const applyTheme = (theme) => {
      document.documentElement.dataset.theme = theme;
      document.documentElement.style.colorScheme = theme === 'dark' ? 'dark' : 'light';
    }
    try { const saved = localStorage.getItem('theme'); if (saved) applyTheme(saved); } catch {}
    modeToggle?.addEventListener('click', () => {
      const current = document.documentElement.dataset.theme || (matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      const next = current === 'dark' ? 'light' : 'dark';
      applyTheme(next); try { localStorage.setItem('theme', next); } catch {}
    });

    // Reveal on scroll
    const revealEls = document.querySelectorAll('.reveal');
    const io = new IntersectionObserver((entries) => {
      for (const e of entries) { if (e.isIntersecting) { e.target.classList.add('in'); io.unobserve(e.target); } }
    }, { threshold: .18 });
    revealEls.forEach(el => io.observe(el));

    // Animate skill meters when visible
    document.querySelectorAll('.bar').forEach(bar => {
      const pct = +bar.dataset.pct || 0;
      const obs = new IntersectionObserver((entries, o) => {
        if (entries[0].isIntersecting) { bar.style.width = pct + '%'; o.disconnect(); }
      }, { threshold: .5 });
      obs.observe(bar);
    });

    // Project filter
    const pills = document.querySelectorAll('.pill');
    const grid = document.getElementById('projectGrid');
    pills.forEach(p => p.addEventListener('click', () => {
      pills.forEach(x => x.classList.remove('active')); p.classList.add('active');
      const tag = p.dataset.filter;
      grid.querySelectorAll('.project').forEach(card => {
        const show = tag === 'all' || card.dataset.tags.includes(tag);
        card.style.display = show ? '' : 'none';
      });
    }));

    // Project modal
    const modal = document.getElementById('projModal');
    const mTitle = document.getElementById('modalTitle');
    const mBody = document.getElementById('modalBody');
    const mLink = document.getElementById('modalLink');
    const projectCopy = {
      TaskFlow: {
        title: 'TaskFlow â€” Minimal project tracker',
        body: 'Built a snappy PWA with offline support and keyboard shortcuts. Users can create boards, drag tasks, and sync when online again. I focused on accessibility and performance (100 Lighthouse PWA score).',
        link: '#'
      },
      CitySense: {
        title: 'CitySense â€” Environmental dashboard',
        body: 'Multi-sensor ingestion, rolling z-score anomaly detection, and responsive D3 visualizations for city planners. Includes CSV import and export.',
        link: '#'
      },
      Irrigation: {
        title: 'Smart irrigation prototype',
        body: 'Arduino-based controller that uses soil moisture thresholds and simple evapotranspiration estimates to schedule watering. Logged data to a small web app for analysis; reduced water usage by ~23% in test plots.',
        link: '#'
      }
    };
    document.querySelectorAll('[data-open]').forEach(btn => btn.addEventListener('click', (e) => {
      e.preventDefault();
      const key = btn.getAttribute('data-open');
      const { title, body, link } = projectCopy[key] || { title: 'Project', body: 'Details coming soon', link: '#' };
      mTitle.textContent = title; mBody.textContent = body; mLink.href = link; modal.showModal();
    }));
    modal?.querySelector('.close')?.addEventListener('click', () => modal.close());
    modal?.addEventListener('click', (e) => { if (e.target === modal) modal.close(); });

    // Contact form (demo only)
    const form = document.getElementById('contactForm');
    const status = document.getElementById('formStatus');
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(form).entries());
      status.textContent = 'Sendingâ€¦';
      setTimeout(() => { status.textContent = 'Thanks! I\'ll reply soon.'; form.reset(); }, 700);
      console.log('Contact form submission', data);
    });

    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Background animated orbs (canvas)
    const canvas = document.getElementById('bgOrbs');
    const ctx = canvas.getContext('2d');
    const resize = () => { canvas.width = innerWidth; canvas.height = Math.max(900, innerHeight); };
    addEventListener('resize', resize); resize();
    const orbs = Array.from({length: 18}, () => ({
      x: Math.random() * canvas.width,
      y: Math.random() * canvas.height * 0.6,
      r: 40 + Math.random()*120,
      s: 0.2 + Math.random()*0.8,
      hue: Math.random() < .5 ? 'rgba(124,156,255,0.10)' : 'rgba(16,185,129,0.10)'
    }));
    let last = 0;
    const mq = matchMedia('(prefers-reduced-motion: reduce)');
    function loop(t){
      const dt = Math.min((t - last)/16, 2); last = t;
      ctx.clearRect(0,0,canvas.width,canvas.height);
      for (const o of orbs){
        o.y += o.s * dt; o.x += Math.sin((o.y + t*.02) * 0.005) * o.s * 0.8;
        if (o.y - o.r > canvas.height) { o.y = -o.r; o.x = Math.random()*canvas.width; }
        const g = ctx.createRadialGradient(o.x, o.y, 0, o.x, o.y, o.r);
        g.addColorStop(0, o.hue);
        g.addColorStop(1, 'rgba(0,0,0,0)');
        ctx.fillStyle = g; ctx.beginPath(); ctx.arc(o.x, o.y, o.r, 0, Math.PI*2); ctx.fill();
      }
      requestAnimationFrame(loop);
    }
    if (!mq.matches) requestAnimationFrame(loop);

    // Smooth scroll for internal links
    document.querySelectorAll('a[href^="#"]').forEach(a => a.addEventListener('click', e => {
      const id = a.getAttribute('href');
      if (id.length > 1) { e.preventDefault(); document.querySelector(id)?.scrollIntoView({behavior:'smooth'}); }
    }));

    // RÃ©sumÃ© button (replace link)
    document.getElementById('resumeBtn')?.addEventListener('click', (e) => {
      // If you have a file, set href on #resume above. This keeps the top button in sync.
      const res = document.getElementById('resume');
      const href = res?.getAttribute('href') || '#';
      if (href === '#') return; // no file yet
      e.preventDefault(); window.open(href, '_blank');
    });
  </script>
</body>
</html>
